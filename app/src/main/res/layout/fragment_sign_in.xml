<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF5F5"

   >
    <TextView
        android:id="@+id/s"
        android:text="Welcome,"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/s1"
        android:text="Sign in to continue!"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#978B8B"
        app:layout_constraintTop_toBottomOf="@id/s"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtName"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        app:hintEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/s"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username"

            android:background="@drawable/edittextradius"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:maxLength="10"
            android:hint="Email ID"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtPass"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        app:hintEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/edtName"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:background="@drawable/edittextradius"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:maxLength="10"
            android:hint="Password"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <CheckBox
        android:id="@+id/cb"
        app:layout_constraintTop_toBottomOf="@id/edtPass"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="30dp"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:text="Forgot Password?"
        android:textSize="20dp"
        android:textColor="#978D8D"
        app:layout_constraintTop_toBottomOf="@id/edtPass"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="33dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="ff"
        android:textColor="#fff"
        android:background="@drawable/buttondarius"
        android:id="@+id/btnsignin"
        android:text="Sign in"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Remember Me"
        android:textSize="20dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/edtPass"
        app:layout_constraintLeft_toRightOf="@id/cb"
        android:layout_marginTop="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/face"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/iconfb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnsignin" />

    <ImageView
        android:id="@+id/gg"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@drawable/icongg"
        app:layout_constraintRight_toRightOf="@id/face"
        app:layout_constraintLeft_toLeftOf="@id/sky"
        app:layout_constraintTop_toBottomOf="@id/btnsignin" />

    <ImageView
        android:id="@+id/sky"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginRight="136dp"
        android:src="@drawable/iconsky"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnsignin" />
    <TextView
        android:textColor="#000"
        android:id="@+id/hi"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="120dp"
        android:textSize="14dp"
        android:text="I'am a new user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/registerTextview"
        android:textColor="#CD4B77"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="5dp"
        android:textSize="14dp"
        android:text=",Sign Up"
        app:layout_constraintLeft_toRightOf="@id/hi"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>